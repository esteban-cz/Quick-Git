{
  "name": "quick-git",
  "displayName": "Quick Git",
  "description": "Quick Git will quickly add, commit and push your project to git with simple commit message ",
  "version": "1.0.0",
  "publisher": "esty",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "icon": "icon/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/esteban-cz/Quick-Git"
  },
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "command": "btnPressed.Commit&Push",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "btnPressed.Commit&Push",
        "title": "Commit and push",
        "icon": "$(git-commit)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  }
}
